<!DOCTYPE html>
<html>
  <head>
    <title>FarnaultDev</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body>
    <% if alert %>
      <div class="alert">
        <%= alert %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
